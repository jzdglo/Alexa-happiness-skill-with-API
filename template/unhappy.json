{
  "type": "APL",
  "version": "1.6",
  "theme": "light",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.3.0"
    }
  ],
  "mainTemplate": {
    "parameters": [
      "basicFooterData"
    ],
    "items": [
      {
        "type": "Container",
        "height": "100vh",
        "width": "100vw",
        "items": [
          {
           "type": "AlexaBackground",
           "backgroundImageSource": "https://images.unsplash.com/photo-1614851099175-e5b30eb6f696?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2100&q=80"
          },
          {
            "headerTitle": "${basicFooterData.headerTitle}",
            "theme": "light",
            "headerSubtitle": "${basicFooterData.headerSubtitle}",
            "headerAttributionImage": "${basicFooterData.headerAttributionImage}",
            "headerDivider": true,
            "type": "AlexaHeader",
            "headerBackButton": true,
            "headerBackButtonAccessibilityLabel": "back",
            "headerBackgroundColor": "transparent",
            "backgroundScale": "best-fill",
            "backgroundAlign": "center",
            "backgroundBlur": false
          },
          {
            "type": "Image",
            "source": "https://www.clipartkey.com/mpngs/m/22-223589_people-social-group-cartoon-animated-art-art-group.png",
            "height": "50vh",
            "width": "100vw",
            "imageAlignment": "center",
            "position": "absolute",
            "left": "0vh",
            "top": "18vh"
          },
          {
            "type": "Text",
            "theme": "light",
            "color": "#1E2222",
            "text": "${basicFooterData.bodyText}",
            "paddingLeft": "@marginHorizontal",
            "paddingRight": "@marginHorizontal",
            "style": "textStyleBody",
            "top": "55vh"
          },
          {
            "type": "AlexaFooter",
            "theme": "light",
            "hintText": "${basicFooterData.hintText}",
            "position": "absolute",
            "bottom": 0
          }
        ]
      }
    ]
  }
}

